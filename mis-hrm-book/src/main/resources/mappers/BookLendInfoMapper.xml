<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mis.hrm.book.dao.BookLendInfoMapper">
    <resultMap id="bookLendInfoResult" type="bookLendInfo">
        <result property="companyId" column="company_id"/>
        <result property="bookRecord" column="book_record"/>
        <result property="bookName" column="book_name"/>
        <result property="lendTime" column="lend_time"/>
        <result property="returnTime" column="return_time"/>
        <result property="borrower" column="borrower"/>
    </resultMap>
    <sql id="Base_Column_List">
        company_id, book_record, book_name, lend_time, return_time, borrower
    </sql>

    <insert id="insert" parameterType="book">
        insert into booklend (company_id, book_record, book_name, lend_time, borrower)
          VALUES (#{companyId},#{bookRecord},#{bookName},#{lendTime},#{borrower})
    </insert>

    <select id="selectByPrimaryKey" parameterType="bookLendInfo" resultMap="bookLendInfoResult">
        select
        <include refid="Base_Column_List"/>
        from booklend where company_id = #{companyId} and book_record = #{bookRecord};
    </select>

    <delete id="deleteByPrimaryKey" parameterType="bookLendInfo">
        delete from booklend where company_id = #{companyId} and book_record = #{bookRecord};
    </delete>

    <update id="updateByPrimaryKey" parameterType="bookLendInfo">
        update booklend
        <set>
            <if test="companyId != null">
                company_id = #{companyId},
            </if>
            <if test="bookName != null">
                book_name = #{bookName},
            </if>
            <if test="lendTime != null">
                lend_time = #{lendTime},
            </if>
            <if test="returnTime != null">
                return_time = #{returnTime}
            </if>
        </set>
        where company_id = #{companyId} and book_record = #{bookRecord};
    </update>

    <select id="selectBookLendInfosByBorrower" parameterType="string" resultMap="bookLendInfoResult">
        select
        <include refid="Base_Column_List"/>
        from booklend where borrower = #{borrower};
    </select>

    <select id="selectBookLendInfosByCompanyId" parameterType="string" resultMap="bookLendInfoResult">
        select
        <include refid="Base_Column_List"/>
        from booklend where company_id = #{companyId};
    </select>

    <select id="selectBookLendInfosByCompanyIdAndBookName" resultMap="bookLendInfoResult">
        select
        <include refid="Base_Column_List"/>
        from booklend where company_id = #{companyId} and book_name = #{bookName};
    </select>

    <select id="selectAll" resultMap="bookLendInfoResult">
        select <include refid="Base_Column_List"/> from booklend;
    </select>
</mapper>