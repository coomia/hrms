<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/aop
         http://www.springframework.org/schema/aop/spring-aop.xsd
         http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:spring/electronicsign-mongo.xml"/>

    <bean id="electronicSignAccessLog" class="com.facishare.crm.electronicsign.interceptor.LogInterceptor">
        <constructor-arg type="java.lang.String" value="ElectronicSignAccess"/>
        <constructor-arg type="java.lang.String" value=""/>
    </bean>

    <aop:config>
        <aop:aspect id="electronicSignAccessLogMonitor" ref="electronicSignAccessLog" order="1">
            <aop:pointcut id="electronicSignAccessLogAround"
                          expression="execution(* com.facishare.crm.electronicsign.predefine.*.*.*(..)))"/>
            <aop:around pointcut-ref="electronicSignAccessLogAround" method="around"/>
        </aop:aspect>
    </aop:config>

    <bean id="electronicSignMqMessageSender" class="com.facishare.paas.appframework.common.mq.RocketMQMessageSender"
          p:configName="fs-crm-mq-electronic-sign"  init-method="init"> </bean>

</beans>